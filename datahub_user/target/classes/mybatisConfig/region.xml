<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 城市 xml -->
<mapper namespace="region">

  <resultMap id="getregion" type="_Region">
    <id property="id" column="id"/>
	<result property="parentId" column="parent_id"/>
	<result property="parentId" column="parent_id"/>
	<result property="name" column="name"/>
	<result property="type" column="type"/>
  </resultMap>
	 
	 <select id="getAllRegion" resultMap="getregion">
	 	select * from llbtmp_region a where  a.type = 1
	 </select>
	 
	 <select id="getByRegionId" parameterType="long" resultMap="getregion">
	 	select * from llbtmp_region a where  a.parent_id = #{id}
	 </select>
	 
	 <select id="getRegionNameById" parameterType="long" resultMap="getregion">
	 	select * from llbtmp_region a where  a.id = #{regionId}
	 </select>
</mapper>